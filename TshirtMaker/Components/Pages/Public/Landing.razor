@code {

    public class DemoDesign
    {
        public string FinalImageUrl { get; set; } = "";
        public string Prompt { get; set; } = "";
        public string Color { get; set; } = "";
    }
    private string promptText = "";
    private List<DemoDesign> showcaseDesigns = new();

    protected override void OnInitialized()
    {
        if (AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("/dashboard");
        }

        showcaseDesigns =
        showcaseDesigns = new List<DemoDesign>
        {
new DemoDesign
{
FinalImageUrl = "public/designs/image_1_1768985216052.jpg",
Prompt = "Cyberpunk cityscape with neon lights",
Color = "#000000"
},
new DemoDesign
{
FinalImageUrl = "public/designs/image_1_1768985605312.jpg",
Prompt = "Abstract geometric patterns",
Color = "#FFFFFF"
},
new DemoDesign
{
FinalImageUrl = "public/designs/image_1_1768985789863.jpg",
Prompt = "Cosmic nebula with stars",
Color = "#1a1a2e"
}
        };

    }

    private void HandleGenerate()
    {
        if (!string.IsNullOrWhiteSpace(promptText))
        {
            Navigation.NavigateTo($"/create?prompt={Uri.EscapeDataString(promptText)}");
        }
        else
        {
            Navigation.NavigateTo("/create");
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            HandleGenerate();
        }
    }
}
