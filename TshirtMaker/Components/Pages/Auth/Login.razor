@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer
@attribute [IgnoreAntiforgeryToken]
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Mvc
@using TshirtMaker.Services
@using TshirtMaker.Services.Supabase
@using TshirtMaker.Models
@inject NavigationManager Navigation
@inject SupabaseAuthService SupabaseAuth
@inject AuthStateService Auth
@inject IJSRuntime JS

<div class="login-container">
    <!-- Left Side: Visual Showcase -->
    <div class="login-visual-side">
        <div class="visual-background">
            <div class="iq-pattern"></div>
            <div class="gradient-blur gradient-blur-1"></div>
            <div class="gradient-blur gradient-blur-2"></div>
        </div>

        <div class="brand-logo">
            <div class="logo-icon">
                <span style="font-size: 1.25rem;">✨</span>
            </div>
            <h2 class="brand-name">ClothIQ</h2>
        </div>

        <div class="visual-content">
            <div class="hero-image-container">
                <div class="hero-image">
                    <div class="hero-image-inner"
                        style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAeYT9laJe73dIHWvw8J8bpKqkHTURjWXZC9zInvVz8vHF6CNwX5lM9ZgFYsD3DgTO0V5OVjJOUBbCIgGblz7PGW5cUFVdujcQFn-d0jHCCTTTiLVGWOK35Bsbi_cru-TmeCShMOFglKqGsPVDJeQDKSN4nqfSph-8cOyuXfMu4QfllltFiS0CmZYTZn27oAxIuNJLeEfpdpDNDIuGKfF3Ho7i8BiBE742hUDLd3aSB8eir44qPbwcfJUUXx_T7HEZZ1hQBhxcIFdyb");'>
                    </div>
                    <div class="hero-overlay"></div>
                </div>
            </div>
        </div>

        <div class="visual-footer">
            <p class="visual-tagline">Generative Fashion</p>
            <h3 class="visual-title">Elevate your style with <span class="primary-text">AI precision.</span></h3>
        </div>
    </div>

    <!-- Right Side: Login Form -->
    <div class="login-form-side">
        <div class="form-background">
            <div class="iq-pattern"></div>
        </div>

        <div class="form-content">
            <!-- Mobile Logo -->
            <div class="mobile-logo">
                <div class="logo-icon">
                    <span class="material-symbols-outlined">auto_awesome</span>
                </div>
                <h2 class="brand-name">ClothIQ</h2>
            </div>

            <div class="form-header">
                <h1 class="form-title">Welcome Back</h1>
                <p class="form-subtitle">Design the future of your wardrobe.</p>
            </div>

            <!-- Glassmorphism Card -->
            <div class="glass-card">
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger">@error</div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success">@successMessage</div>
                }

                <!-- Using standard HTML form with Blazor event handling -->
                <div>
                    <!-- Email Field -->
                    <div class="form-field">
                        <label class="form-label">Email Address</label>
                        <div class="input-wrapper">
                            <span class="input-icon material-symbols-outlined">mail</span>
                            <input @bind="LoginModel.Email" 
                                   @bind:event="oninput"
                                   type="email"
                                   class="login-input" 
                                   placeholder="name@example.com" 
                                   autocomplete="email"
                                   disabled="@isLoggingIn"
                                   style="width: 100%; background-color: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 9999px; height: 3.5rem; padding-left: 3rem; padding-right: 1.5rem; color: white; font-size: 1rem; transition: all 0.3s ease; outline: none; box-sizing: border-box;" />
                        </div>
                        @if (showValidationMessages && string.IsNullOrWhiteSpace(LoginModel.Email))
                        {
                            <span style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;">Email is required</span>
                        }
                    </div>

                    <!-- Password Field -->
                    <div class="form-field">
                        <div class="form-label-row">
                            <label class="form-label">Password</label>
                            <a class="forgot-link" href="#">Forgot Password?</a>
                        </div>
                        <div class="input-wrapper">
                            <span class="input-icon material-symbols-outlined">lock</span>
                            <input @bind="LoginModel.Password" 
                                   @bind:event="oninput"
                                   type="password"
                                   class="login-input"
                                   placeholder="••••••••" 
                                   autocomplete="current-password"
                                   disabled="@isLoggingIn"
                                   style="width: 100%; background-color: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 9999px; height: 3.5rem; padding-left: 3rem; padding-right: 1.5rem; color: white; font-size: 1rem; transition: all 0.3s ease; outline: none; box-sizing: border-box;" />
                        </div>
                        @if (showValidationMessages && string.IsNullOrWhiteSpace(LoginModel.Password))
                        {
                            <span style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;">Password is required</span>
                        }
                    </div>

                    <!-- Sign In Button -->
                    <button type="button" @onclick="HandleLogin" class="submit-button" disabled="@isLoggingIn">
                        @if (isLoggingIn)
                        {
                            <LoadingSpinner />
                        }
                        else
                        {
                            <span>Sign In</span>
                            <span class="material-symbols-outlined">arrow_forward</span>
                        }
                    </button>
                </div>
            </div>

            <!-- Footer CTA -->
            <div class="form-footer">
                <p class="footer-text">
                    Don't have an account?
                    <a class="footer-link" href="/signup">Sign Up</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    public LoginModel LoginModel { get; set; } = new LoginModel();
    string error = "";
    string successMessage = "";
    bool showValidationMessages = false;
    bool isLoggingIn = false;

    protected override async Task OnInitializedAsync()
    {
        // Check if user is already logged in
        var currentUser = Auth.GetCurrentUser();
        if (currentUser != null)
        {
            Navigation.NavigateTo("/dashboard", forceLoad: true);
        }
    }

    async Task HandleLogin()
    {
        error = "";
        successMessage = "";
        showValidationMessages = true;
        isLoggingIn = true;

        try
        {
            if (string.IsNullOrWhiteSpace(LoginModel.Email) || string.IsNullOrWhiteSpace(LoginModel.Password))
            {
                error = "Please fill in both email and password fields.";
                isLoggingIn = false;
                return;
            }

            var userDto = await SupabaseAuth.SignInAsync(LoginModel.Email, LoginModel.Password);

            if (userDto is not null)
            {
                var user = userDto.ToModel();
                Auth.SetUser(user);
                
                // Add a small delay to ensure state is saved
                await Task.Delay(100);
                
                successMessage = "Login successful! Redirecting...";
                StateHasChanged();
                
                // Add another small delay before navigation
                await Task.Delay(500);
                
                // Force a full page reload to ensure authentication state is recognized
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                error = "Invalid email or password.";
                isLoggingIn = false;
            }
        }
        catch (Exception ex)
        {
            error = $"Login failed: {ex.Message}";
            isLoggingIn = false;
            Console.WriteLine($"Login error: {ex}");
        }
    }
}