<section class="save-share-section fade-in">
    <div class="background-blobs">
        <div class="blob blob-1"></div>
        <div class="blob blob-2"></div>
    </div>

    <div class="container">
        <div class="text-center mb-5 mb-md-6">
            <div class="star-icon-wrapper mb-4">
                <svg class="star-icon" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L14.39 9.26L22 12L14.39 14.74L12 22L9.61 14.74L2 12L9.61 9.26L12 2Z"></path>
                </svg>
                <svg class="star-icon-small" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L14.39 9.26L22 12L14.39 14.74L12 22L9.61 14.74L2 12L9.61 9.26L12 2Z"></path>
                </svg>
            </div>
            <h2 class="section-title mb-4">
                Save & Share
            </h2>
            <p class="section-description">
                Explore the community feed. Save your favorites, share your creations with the world, and remix designs
                to make them uniquely yours.
            </p>
        </div>

        <div class="scrolling-container">
            <div class="gradient-fade left-fade"></div>
            <div class="gradient-fade right-fade"></div>
            <div class="scrolling-content pause-on-hover">
                <div class="scrolling-items">
                    @foreach (var item in allItems)
                    {
                        <div class="design-card">
                            <div class="card-image-wrapper">
                                <img src="@item.ImageUrl" alt="@item.Title" class="card-image" />
                                @if (item.IsAIGenerated)
                                {
                                    <div class="ai-badge">
                                        <i class="fas fa-bolt"></i> AI Generated
                                    </div>
                                }
                            </div>
                            <div class="card-footer">
                                <div class="user-info">
                                    <img src="@item.UserAvatar" alt="@item.Username" class="user-avatar" />
                                    <span class="username">@item.Username</span>
                                </div>
                                <button class="remix-btn">
                                    <i class="fas fa-wand-magic-sparkles"></i> Remix Design
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="scrolling-items">
                    @foreach (var item in allItems)
                    {
                        <div class="design-card">
                            <div class="card-image-wrapper">
                                <img src="@item.ImageUrl" alt="@item.Title" class="card-image" />
                                @if (item.IsAIGenerated)
                                {
                                    <div class="ai-badge">
                                        <i class="fas fa-bolt"></i> AI Generated
                                    </div>
                                }
                            </div>
                            <div class="card-footer">
                                <div class="user-info">
                                    <img src="@item.UserAvatar" alt="@item.Username" class="user-avatar" />
                                    <span class="username">@item.Username</span>
                                </div>
                                <button class="remix-btn">
                                    <i class="fas fa-wand-magic-sparkles"></i> Remix Design
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="share-section">
            <div class="share-panel">
                <div class="panel-glow-1"></div>
                <div class="panel-glow-2"></div>
                <h3 class="share-title">Show off your style</h3>
                <div class="social-buttons">
                    <a href="#" class="social-btn instagram">
                        <div class="social-icon instagram-icon">
                            <i class="fab fa-instagram"></i>
                        </div>
                        <span>Instagram</span>
                    </a>
                    <a href="#" class="social-btn tiktok">
                        <div class="social-icon tiktok-icon">
                            <i class="fab fa-tiktok"></i>
                        </div>
                        <span>TikTok</span>
                    </a>
                    <a href="#" class="social-btn pinterest">
                        <div class="social-icon pinterest-icon">
                            <i class="fab fa-pinterest-p"></i>
                        </div>
                        <span>Pinterest</span>
                    </a>
                </div>
                <div class="action-buttons">
                    <button class="action-btn save-btn">
                        <i class="fas fa-save"></i> Save to Collection
                    </button>
                    <button class="action-btn share-btn">
                        <i class="fas fa-share-nodes"></i> Share Design
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

