@using TshirtMaker.Models

<div class="card card-custom card-hover border-0 rounded-3 overflow-hidden fade-in" style="cursor: pointer;">
    <img src="@Design.FinalImageUrl" class="card-img-top" alt="Design" style="height: 300px; object-fit: cover;">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <img src="@Design.UserAvatar" class="rounded-circle me-2" style="width: 32px; height: 32px;" alt="@Design.Username">
            <span class="fw-semibold">@Design.Username</span>
        </div>
        <p class="text-muted small mb-2">@Design.Prompt</p>
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge badge-custom">@Design.ClothingType</span>
            <button class="btn btn-sm btn-custom-secondary d-flex align-items-center gap-1" @onclick="OnLike">
                <span>❤️</span>
                <span>@Design.Likes</span>
            </button>
        </div>
        @if (ShowCopyPrompt)
        {
            <button class="btn btn-sm btn-custom-primary w-100 mt-2" @onclick="OnCopyPrompt">
                Copy Prompt
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public Design Design { get; set; } = new();
    [Parameter] public EventCallback<Design> OnLikeClicked { get; set; }
    [Parameter] public EventCallback<string> OnCopyPromptClicked { get; set; }
    [Parameter] public bool ShowCopyPrompt { get; set; } = true;

    private async Task OnLike()
    {
        await OnLikeClicked.InvokeAsync(Design);
    }

    private async Task OnCopyPrompt()
    {
        await OnCopyPromptClicked.InvokeAsync(Design.Prompt);
    }
}
